<% include src/html/header %>

<div class="createLot-container container">
    <div class="createLot">
        <form action="/lot" method="post" enctype="multipart/form-data" class="createLot-form">
            <input type="text" name="title" required maxlength="80" placeholder="Title">
            <input type="number" name="price" id="" placeholder="Price" required>
            <textarea name="description" id="" placeholder="Description" required></textarea>
            <select name="category" id="">
                <option value="other" selected hidden>Choose category</option>
                <option value="other">Other</option>
                <option value="auto">Auto</option>
                <option value="computers">Computers</option>
                <option value="appliences">Appliencs</option>
                <option value="clothes">Clothes</option>
            </select>
            <input type="file" name="image" id="" accept="image/*" value="choose image" required>
            <input type="hidden" name="username" value="">
            <input type="submit" value="Create Lot">
        </form>
    </div>
</div>

